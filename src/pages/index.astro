---
import About from '../components/Home/About.astro';
import CaseStudy from '../components/Home/CaseStudy.astro';
import ContactSection from '../components/Home/ContactSection.astro';
import FeaturedBlog from '../components/Home/FeaturedBlog.astro';
import Hero from '../components/Home/Hero.astro';
import Projects from '../components/Home/Projects.astro';
import Services from '../components/Home/Services.astro';
import TechStack from '../components/Home/TechStack.astro';
import Navbar from '../components/shared/Navbar.svelte';
import Layout from '../layouts/Layout.astro';

const title = 'Madusha Sandaruwan - Portfolio Website';
const description =
	'Madusha Sandaruwan is a GitHub certified full-stack developer building pixel-perfect, resilient web applications with modern backends.';
---

<Layout title={title} description={description}>
  <Navbar client:load />
  <main id="main-content">
    <Hero />
    <Services />
    <CaseStudy />
    <About />
    <TechStack />
    <Projects />
    <FeaturedBlog />
    <ContactSection />
  </main>
</Layout>
