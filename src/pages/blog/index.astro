---

import Navbar from '../../components/shared/Navbar.svelte';
import Layout from '../../layouts/Layout.astro';
import { sanityClient, urlFor } from '../../lib/sanity';

interface Post {
	title: string;
	slug: string;
	publishedAt: string;
	excerpt: string;
	mainImage?: any;
	categories?: string[];
	author?: string;
}

const query = `*[_type == "post"] | order(publishedAt desc) {
  title,
  "slug": slug.current,
  publishedAt,
  excerpt,
  mainImage,
  "categories": categories[]->title,
  "author": author->name
}`;

const allPosts: Post[] = await sanityClient.fetch(query);
---

<Layout title="Blog - Madusha Sandaruwan" description="Technical articles on software engineering, systems design, and architecture.">
  <Navbar client:load pathname={Astro.url.pathname} />
  
  <main class="pt-32 pb-24 min-h-screen">
    <div class="container-custom">
      <div class="mb-20 max-w-4xl">
        <h1 class="text-5xl md:text-7xl font-bold mb-8 tracking-tighter uppercase leading-[0.9]">
          Engineering<br/>
          <span class="text-muted-foreground">Log</span>
        </h1>
        <p class="text-xl md:text-2xl text-muted-foreground max-w-2xl leading-relaxed border-l-4 border-primary pl-6">
          Thoughts on systems design, software architecture, and building reliable products.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-x-8 gap-y-12">
        {allPosts.map((post: any) => (
          <article class="group flex flex-col h-full">
            <a href={`/blog/${post.slug}`} class="block overflow-hidden border-2 border-border mb-6 aspect-16/10 bg-secondary/20 relative">
              {post.mainImage ? (
                <img 
                  src={urlFor(post.mainImage).width(800).height(500).auto('format').url()}
                  srcset={`
                    ${urlFor(post.mainImage).width(400).height(250).auto('format').url()} 400w,
                    ${urlFor(post.mainImage).width(800).height(500).auto('format').url()} 800w
                  `}
                  sizes="(max-width: 768px) 100vw, (max-width: 1024px) 50vw, 33vw"
                  alt={post.title}
                  class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                  loading="lazy"
                  decoding="async"
                />
              ) : (
                <div class="w-full h-full flex items-center justify-center bg-secondary/30 text-muted-foreground">
                  <span class="font-mono text-sm uppercase">No Image</span>
                </div>
              )}
              <div class="absolute inset-0 bg-primary/0 group-hover:bg-primary/10 transition-colors duration-300"></div>
            </a>

            <div class="flex flex-col flex-1">
              <div class="flex items-center gap-4 mb-4 text-xs font-mono uppercase tracking-wider text-muted-foreground">
                <time datetime={post.publishedAt}>
                  {new Date(post.publishedAt).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}
                </time>
                <span class="w-px h-3 bg-border"></span>
                <span>{post.categories?.[0] || 'Tech'}</span>
              </div>

              <h2 class="text-2xl font-bold mb-4 leading-tight uppercase tracking-tight group-hover:text-primary transition-colors">
                <a href={`/blog/${post.slug}`}>
                  {post.title}
                </a>
              </h2>
              
              <p class="text-muted-foreground leading-relaxed mb-6 line-clamp-3 text-sm flex-1">
                {post.excerpt}
              </p>

              <div class="pt-4 border-t border-border mt-auto">
                <a 
                  href={`/blog/${post.slug}`}
                  class="inline-flex items-center gap-2 text-sm font-bold uppercase tracking-wider text-foreground hover:text-primary transition-colors"
                >
                  Read Article
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="transition-transform group-hover:translate-x-1"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
                </a>
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </main>
</Layout>
