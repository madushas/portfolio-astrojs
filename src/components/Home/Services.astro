---
import SectionContainer from '../shared/SectionContainer.astro';

const services = [
	{
		title: 'System Architecture',
		description:
			'Designing distributed systems. I focus on event-driven architectures and microservices that handle high throughput efficiently.',
		icon: 'architecture',
		class: 'lg:col-span-2',
		gradient: 'from-primary/20 to-transparent',
		tech: ['Kafka', 'Redis', 'gRPC'],
	},
	{
		title: 'Frontend Engineering',
		description:
			'Building accessible and performant user interfaces using Next.js, React, and modern CSS.',
		icon: 'code',
		class: 'lg:col-span-1',
		gradient: 'from-blue-500/20 to-transparent',
		tech: ['React', 'TypeScript', 'Tailwind'],
	},
	{
		title: 'Backend Engineering',
		description: 'Developing APIs and optimizing database queries for speed and reliability.',
		icon: 'database',
		class: 'lg:col-span-1',
		gradient: 'from-emerald-500/20 to-transparent',
		tech: ['Go', 'PostgreSQL', 'GraphQL'],
	},
	{
		title: 'DevOps & Infrastructure',
		description: 'Managing cloud infrastructure and CI/CD pipelines on AWS and GCP.',
		icon: 'cloud',
		class: 'lg:col-span-2',
		gradient: 'from-purple-500/20 to-transparent',
		tech: ['Docker', 'Kubernetes', 'Terraform'],
	},
];
---

<SectionContainer id="services" title="What I Work On" subtitle="Bridging the gap between backend systems and user experiences.">
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-5 md:gap-6">
    {services.map((service) => (
      <div class={`group relative overflow-hidden rounded-none border-2 border-border bg-card p-6 md:p-7 lg:p-8 transition-all duration-300 hover:border-primary hover:shadow-none ${service.class}`}>
        
        <!-- Hover Gradient Background -->
        <div class={`absolute inset-0 bg-linear-to-br ${service.gradient} opacity-0 transition-opacity duration-500 group-hover:opacity-100`}></div>
        
        <div class="relative z-10 flex flex-col h-full justify-between gap-5 md:gap-6">
          <!-- Header -->
          <div class="flex justify-between items-start">
            <div class="h-10 w-10 md:h-12 md:w-12 bg-primary/10 flex items-center justify-center text-primary group-hover:scale-110 transition-transform duration-300 border border-primary/20">
              {service.icon === 'architecture' && (
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="2" width="20" height="8" rx="2" ry="2"/><rect x="2" y="14" width="20" height="8" rx="2" ry="2"/><line x1="6" y1="6" x2="6.01" y2="6"/><line x1="6" y1="18" x2="6.01" y2="18"/></svg>
              )}
              {service.icon === 'code' && (
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="16 18 22 12 16 6"/><polyline points="8 6 2 12 8 18"/></svg>
              )}
              {service.icon === 'database' && (
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><ellipse cx="12" cy="5" rx="9" ry="3"/><path d="M21 12c0 1.66-4 3-9 3s-9-1.34-9-3"/><path d="M3 5v14c0 1.66 4 3 9 3s9-1.34 9-3V5"/></svg>
              )}
              {service.icon === 'cloud' && (
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M17.5 19H9a7 7 0 1 1 6.71-9h1.79a4.5 4.5 0 1 1 0 9Z"/></svg>
              )}
            </div>
            
            <!-- Arrow -->
            <div class="opacity-0 transform translate-x-4 group-hover:opacity-100 group-hover:translate-x-0 transition-all duration-300 text-primary">
               <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="5" y1="12" x2="19" y2="12"/><polyline points="12 5 19 12 12 19"/></svg>
            </div>
          </div>

          <!-- Content -->
          <div>
            <h3 class="text-xl md:text-2xl font-bold text-foreground mb-3 group-hover:text-primary transition-colors">{service.title}</h3>
            <p class="text-muted-foreground leading-relaxed text-base mb-6">{service.description}</p>
            
            <!-- Tech Pills -->
            <div class="flex flex-wrap gap-2">
              {service.tech.map(t => (
                <span class="text-[10px] font-bold uppercase tracking-wider px-2 py-1 border border-border bg-background text-muted-foreground group-hover:border-primary/30 transition-colors">
                  {t}
                </span>
              ))}
            </div>
          </div>
        </div>
      </div>
    ))}
  </div>
</SectionContainer>
