---
import SectionContainer from '../shared/SectionContainer.astro';
import Contact from './Contact.svelte';

const contactInfo = [
	{
		label: 'Email',
		value: 'work@madusha.dev',
		href: 'mailto:work@madusha.dev',
		icon: 'email',
	},
	{ label: 'Location', value: 'Colombo, Sri Lanka', icon: 'location' },
	{ label: 'Availability', value: 'Open to Projects', icon: 'status' },
];

const socialLinks = [
	{
		label: 'LinkedIn',
		url: 'https://linkedin.com/in/madushasandaruwan',
		icon: 'linkedin',
	},
	{ label: 'GitHub', url: 'https://github.com/madushaS/', icon: 'github' },
	{ label: 'X (Twitter)', url: 'https://x.com/_MadushaS', icon: 'x' },
];
---

<SectionContainer
  id="contact"
  title="Let's Work Together"
  subtitle="Have a project in mind? Let's build something great."
>
  <div class="grid grid-cols-1 lg:grid-cols-12 border-2 border-border bg-card">
    <!-- Left Column: Contact Info -->
    <div
      class="lg:col-span-5 border-b-2 lg:border-b-0 lg:border-r-2 border-border p-6 md:p-8 lg:p-10 xl:p-12 bg-secondary/5"
    >
      <div class="space-y-8 md:space-y-10">
        <!-- Header -->
        <div>
          <h3
            class="text-xl md:text-2xl font-black uppercase tracking-tighter mb-3 text-foreground"
          >
            Get in Touch
          </h3>
          <p class="text-muted-foreground leading-relaxed">
            Whether you need a technical co-founder, architect, or consultant,
            I'm here to help build scalable solutions.
          </p>
        </div>

        <!-- Contact Info Grid -->
        <div class="space-y-0 border-2 border-border">
          {
            contactInfo.map((item, index) => (
              <div
                class={`group p-4 md:p-5 flex items-start gap-4 hover:bg-foreground hover:text-background transition-colors ${
                  index !== contactInfo.length - 1
                    ? "border-b-2 border-border"
                    : ""
                }`}
              >
                <div class="w-10 h-10 bg-background border-2 border-border flex items-center justify-center shrink-0 group-hover:bg-primary group-hover:border-primary group-hover:text-primary-foreground transition-colors">
                  {item.icon === "email" && (
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="18"
                      height="18"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <rect width="20" height="16" x="2" y="4" rx="2" />
                      <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7" />
                    </svg>
                  )}
                  {item.icon === "location" && (
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="18"
                      height="18"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z" />
                      <circle cx="12" cy="10" r="3" />
                    </svg>
                  )}
                  {item.icon === "status" && (
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="18"
                      height="18"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <circle cx="12" cy="12" r="10" />
                      <polyline points="12 6 12 12 16 14" />
                    </svg>
                  )}
                </div>
                <div class="flex-1 min-w-0">
                  <div class="text-xs font-bold uppercase tracking-widest mb-1 opacity-70">
                    {item.label}
                  </div>
                  {item.href ? (
                    <a
                      href={item.href}
                      class="text-base font-bold hover:text-primary group-hover:text-background transition-colors break-all"
                    >
                      {item.value}
                    </a>
                  ) : (
                    <div class="text-base font-bold">{item.value}</div>
                  )}
                </div>
              </div>
            ))
          }
        </div>

        <!-- Social Links -->
        <div>
          <h4
            class="text-xs font-bold uppercase tracking-widest mb-4 text-muted-foreground"
          >
            Connect With Me
          </h4>
          <div class="flex flex-wrap gap-3">
            {
              socialLinks.map((social) => (
                <a
                  href={social.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="group/social flex items-center gap-2 px-4 py-3 border-2 border-border bg-background text-foreground font-bold text-sm uppercase tracking-wider hover:bg-foreground hover:text-background hover:border-foreground transition-all hover:-translate-y-1 active:scale-95"
                  aria-label={`Visit my ${social.label} profile`}
                >
                  {social.icon === "linkedin" && (
                    <svg
                      width="16"
                      height="16"
                      viewBox="0 0 24 24"
                      fill="currentColor"
                    >
                      <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9H12.92v1.636h.049c.496-.94 1.712-1.929 3.521-1.929 3.765 0 4.46 2.479 4.46 5.702v6.043zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
                    </svg>
                  )}
                  {social.icon === "github" && (
                    <svg
                      width="16"
                      height="16"
                      viewBox="0 0 24 24"
                      fill="currentColor"
                    >
                      <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                    </svg>
                  )}
                  {social.icon === "x" && (
                    <svg
                      width="16"
                      height="16"
                      viewBox="0 0 24 24"
                      fill="currentColor"
                    >
                      <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
                    </svg>
                  )}
                  <span>{social.label}</span>
                </a>
              ))
            }
          </div>
        </div>

        <!-- Quote or Note -->
        <blockquote
          class="border-l-4 border-primary pl-4 py-2 text-sm italic text-muted-foreground"
        >
          "I typically respond within 24 hours. Let's discuss how we can work
          together."
        </blockquote>
      </div>
    </div>

    <!-- Right Column: Contact Form -->
    <div class="lg:col-span-7 p-6 md:p-8 lg:p-10 xl:p-12">
      <Contact client:visible />
    </div>
  </div>
</SectionContainer>
