const techCategories = [
	{
		category: 'Languages',
		techs: [
			{
				name: 'TypeScript',
				icon: 'typescript',
				logo: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/typescript/typescript-original.svg',
			},
			{
				name: 'C#',
				icon: 'csharp',
				logo: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/csharp/csharp-original.svg',
			},
			{
				name: 'Go',
				icon: 'go',
				logo: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/go/go-original.svg',
			},
			{
				name: 'Python',
				icon: 'python',
				logo: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/python/python-original.svg',
			},
			{
				name: 'C++',
				icon: 'cplusplus',
				logo: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/cplusplus/cplusplus-original.svg',
			},
		],
	},
	{
		category: 'Frameworks',
		techs: [
			{
				name: '.NET',
				icon: 'dotnet',
				logo: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/dotnetcore/dotnetcore-original.svg',
			},
			{
				name: 'Hono',
				icon: 'hono',
				logo: 'https://raw.githubusercontent.com/honojs/hono/main/docs/images/hono-logo.png',
			},
			{
				name: 'Svelte',
				icon: 'svelte',
				logo: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/svelte/svelte-original.svg',
			},
			{
				name: 'Next.js',
				icon: 'nextjs',
				logo: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/nextjs/nextjs-original.svg',
			},
			{
				name: 'Astro',
				icon: 'astro',
				logo: 'https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/astro/astro-original.svg',
			},
		],
	},
	{
		category: 'Data & Messaging',
		techs: [
			{
				name: 'PostgreSQL',
				icon: 'postgresql',
				logo: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/postgresql/postgresql-original.svg',
			},
			{
				name: 'MySQL',
				icon: 'mysql',
				logo: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/mysql/mysql-original.svg',
			},
			{
				name: 'MongoDB',
				icon: 'mongodb',
				logo: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/mongodb/mongodb-original.svg',
			},
			{
				name: 'Kafka',
				icon: 'kafka',
				logo: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/apachekafka/apachekafka-original.svg',
			},
			{
				name: 'Redis',
				icon: 'redis',
				logo: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/redis/redis-original.svg',
			},
		],
	},
	{
		category: 'Cloud & DevOps',
		techs: [
			{
				name: 'Azure',
				icon: 'azure',
				logo: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/azure/azure-original.svg',
			},
			{
				name: 'GitHub Actions',
				icon: 'githubactions',
				logo: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/githubactions/githubactions-original.svg',
			},
			{
				name: 'Docker',
				icon: 'docker',
				logo: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/docker/docker-original.svg',
			},
			{
				name: 'Linux',
				icon: 'linux',
				logo: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/linux/linux-original.svg',
