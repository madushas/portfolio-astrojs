---
import { developerEvents } from '../../data/events';
import SectionContainer from '../shared/SectionContainer.astro';
---

<SectionContainer id="events" title="Developer Community Events">
  <div class="relative w-full overflow-x-auto pb-6 snap-x snap-mandatory scrollbar-hide">
    <div class="flex gap-4 w-max px-4">
      {developerEvents.map((card) => (
        <div class="group relative h-[450px] w-[350px] md:w-[450px] shrink-0 overflow-hidden rounded-2xl snap-center border border-border/50 bg-card">
          <div
            style={`background-image: url(${typeof card.image === 'string' ? card.image : (card.image as any).src});`}
            class="absolute inset-0 z-0 bg-cover bg-center transition-transform duration-500 group-hover:scale-110"
          />
          <div class="absolute inset-0 z-10 bg-linear-to-t from-black/90 via-black/40 to-transparent opacity-80 transition-opacity duration-300 group-hover:opacity-90" />
          
          <div class="absolute inset-0 z-20 flex flex-col justify-end p-8">
            <h3 class="text-2xl font-bold text-white leading-tight mb-2 translate-y-2 transition-transform duration-300 group-hover:translate-y-0">
              {card.title}
            </h3>
            <div class="space-y-1 translate-y-4 opacity-0 transition-all duration-300 group-hover:translate-y-0 group-hover:opacity-100">
                <div class="flex items-center text-sm font-medium text-white/90">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2"><rect width="18" height="18" x="3" y="4" rx="2" ry="2"/><line x1="16" y1="2" x2="16" y2="6"/><line x1="8" y1="2" x2="8" y2="6"/><line x1="3" y1="10" x2="21" y2="10"/></svg>
                  {card.date}
                </div>
                <div class="flex items-center text-sm font-medium text-white/90">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2"><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/><circle cx="12" cy="10" r="3"/></svg>
                  {card.venue}
                </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</SectionContainer>

<style>
  .scrollbar-hide::-webkit-scrollbar {
      display: none;
  }
  .scrollbar-hide {
      -ms-overflow-style: none;
      scrollbar-width: none;
  }
</style>

